lib = File.expand_path('../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)
require File.expand_path('modifier', File.dirname(__FILE__))

def latest(name)
  files = Dir["#{ ENV["HOME"] }/workspace/*#{name}*.txt"]

  files.sort_by! do |file|
    last_date = /\d+-\d+-\d+_[[:alpha:]]+\.txt$/.match file
    last_date = last_date.to_s.match /\d+-\d+-\d+/
    date = DateTime.parse(last_date.to_s)
    date
  end

  throw RuntimeError if files.empty?

  files.last
end

namespace :run do
  desc "Run the task to make my life easier"
  task :my_task1 do
    FileUtils.rm Dir["#{ ENV["HOME"] }/workspace/*.txt.sorted"]
    FileUtils.rm Dir["#{ ENV["HOME"] }/workspace/*_0.txt"]
    modified = input = latest('myproject_2012-07-27_2012-10-10_performancedata')
    modification_factor = 1
    cancellaction_factor = 0.4
    modifier = Modifier.new(modification_factor, cancellaction_factor)
    modifier.modify(modified, input)

    puts "DONE modifying"
  end

end
